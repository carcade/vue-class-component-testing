{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es2017",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    },
    "noImplicitAny": false
  }
}
